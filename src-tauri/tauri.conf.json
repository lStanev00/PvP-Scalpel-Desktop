{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "PvP Scalpel",
  "version": "0.0.102",
  "identifier": "bg.pvpscalpel.desktop",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "PvP Scalpel",
        "width": 1300,
        "height": 900,
        "decorations": false,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",

    "publisher": "PvP Scalpel",
    "copyright": "Â© 2026 PvP Scalpel",
    "shortDescription": "Competitive PvP analysis and tooling",
    "longDescription": "PvP Scalpel is a competitive PvP desktop application for analysis, tracking, and tooling.",

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh"
      }
    }
  }
}
